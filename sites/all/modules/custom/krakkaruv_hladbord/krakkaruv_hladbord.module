/**
 * Implements hook_corn().
 *
 * @todo When cron is run, rebuild the Hlaðborð based on the settings
 */
function krakkaruv_hladbord_assemble_hladbord(){
  $watch = variable_get('krakkaruv_hladbord_number_of_watch_nodes');
  $listen = variable_get('krakkaruv_hladbord_number_of_listen_nodes');
  $create = variable_get('krakkaruv_hladbord_number_of_create_nodes');
  $computer_games = variable_get('krakkaruv_hladbord_number_of_computer_games_nodes');
  $outdoot_games = variable_get('krakkaruv_hladbord_number_of_outdoor_games_nodes');
  $first_place = variable_get('krakkaruv_hladbord_first_place_tax');

}
